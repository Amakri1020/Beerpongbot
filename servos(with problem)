#define servoPinHori 9
#define servoPinVer 10

#include <Servo.h>

Servo myservoHori;
Servo myservoVer;
int posHori = 0;
int posVer = 0;

void setup(){
  Serial.begin(9600);
  myservoHori.attach(servoPinHori);
  myservoVer.attach(servoPinVer);
}

void loop(){

  for (posVer = 0; posVer<30; posVer++){
    myservoVer.write(posVer);

    delay(200);
  }
  for (posVer = 30; posVer>0; posVer--){
    myservoVer.write(posVer);

    delay(200);
  }
  delay(100);
  for (posHori = 0; posHori<30; posHori++){
    myservoHori.write(posHori);
    Serial.print(posHori);
    Serial.print("\n");
    delay(200);
  }
  for (posHori = 30; posHori>0; posHori--){
    myservoHori.write(posHori);
    Serial.print(posHori);
    Serial.print("\n");
    delay(200);
  }
  delay(100);
}
